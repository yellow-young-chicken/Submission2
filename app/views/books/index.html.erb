<h1 class="notice">Books</h1>

<div class="content">

  <div class="title">
    <p class="title-cell">Title</p>
    <p class="title-cell">Body</p>
  </div>

  <% @books.each do |book| %>
    <div class="list-comment">
      <span class="cell">
        <%= book.title %>
      </span>

      <span class="cell">
        <%= book.body %>
      </span>

      <div class="link">
        <div class="link-sentence">
          <%= link_to "Show", book_path(book) %>
        </div>
        <div class="link-sentence">
          <%= link_to "Edit", edit_book_path(book) %>
        </div>
        <div class="link-sentence">
          <%= link_to "Destory", destroy_book_path(book.id) , method: :delete, "data-confirm" => "本当に削除しますか？" %>
        </div>

      </div>
    </div>
  <% end %>
</div>

<h1>New book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @book,url: '/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

